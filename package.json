{
  "name": "ai-context-commit-tools",
  "version": "1.0.2",
  "description": "AI context builder with automated commit message generation and changelog maintenance for enhanced AI-assisted development",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "bin": {
    "ai-context-commit-tools": "bin/cli.js",
    "ai-commit": "bin/ai-commit.js",
    "ai-changelog": "bin/ai-changelog.js"
  },
  "scripts": {
    "build": "npm run clean && tsc",
    "build:watch": "tsc --watch",
    "clean": "rimraf lib dist",
    "dev": "npm run build:watch",
    "prepare": "npm run build",
    "prepublishOnly": "npm run build && npm run lint && npm run test",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint 'src/**/*.{ts,tsx}' --cache",
    "lint:fix": "eslint 'src/**/*.{ts,tsx}' --fix",
    "format": "prettier --write 'src/**/*.{ts,tsx,js,jsx,json,md}'",
    "format:check": "prettier --check 'src/**/*.{ts,tsx,js,jsx,json,md}'",
    "type-check": "tsc --noEmit",
    "validate": "npm run type-check && npm run lint && npm run test",
    "release": "npm run validate && npm publish"
  },
  "keywords": [
    "ai",
    "context",
    "commit",
    "changelog",
    "conventional-commits",
    "cursor",
    "automation",
    "git",
    "ai-context",
    "context-builder",
    "development-tools",
    "public",
    "open-source"
  ],
  "author": "AI Development Tools Community",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/dphadtare/ai-context-commit-tools-package.git"
  },
  "bugs": {
    "url": "https://github.com/dphadtare/ai-context-commit-tools-package/issues"
  },
  "homepage": "https://github.com/dphadtare/ai-context-commit-tools-package#readme",
  "engines": {
    "node": ">=16.0.0"
  },
  "files": [
    "lib/**/*.js",
    "lib/**/*.d.ts",
    "bin/**/*",
    "templates/**/*",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^9.5.0",
    "inquirer": "^8.2.6",
    "fs-extra": "^11.1.1",
    "ora": "^5.4.1",
    "semver": "^7.5.4"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^8.2.10",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.30",
    "@types/semver": "^7.5.8",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.2",
    "typescript": "^5.4.3"
  },
  "peerDependencies": {
    "husky": "^8.0.0"
  },
  "peerDependenciesMeta": {
    "husky": {
      "optional": true
    }
  }
}
